{{!-- nav bar --}}
<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <span class="mr-2"><img id="logo" src="/assets/images/spotcheck-logo.png" alt="logo-spotcheck"></span>
    <h1 id="name-app" class="mr-auto">Spot Check!</h1>
</nav>

{{!-- main container --}}
<div class="container text-center mx-auto">

    {{!-- card to enter the phone number --}}
    <div class="row mt-4">
        <div class="col-sm-12 col-md-8 col-lg-8 text-center mx-auto">
            <div class="card">
                <div class="card-body">
                    <form id="signin" name="signin" method="POST" action="/signin" class="mt-3 text-left">
                        <div class="form-group">
                            <label for="phone-number">Enter your phone number</label>
                            <input type="tel" class="form-control" id="phone-number" name="phoneNumber" required>
                            <small id="phone-disclaimer" class="form-text text-muted">We'll never share your phone number. You won't receive unsollicited phone calls.</small>
                            <label for="password">Enter password</label>
                            <input type= "password" class="form-control" name="password" required>
                        </div>
                        <button id="login-btn" type="submit" class="btn">Submit</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

</div>